{
  "name": "yt-timer",
  "description": "Time your YouTube consumption",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": ["tabs", "storage"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "yt-timer-logo.png",
      "32": "yt-timer-logo.png",
      "48": "yt-timer-logo.png",
      "128": "yt-timer-logo.png"
    }
  },
  "icons": {
    "16": "yt-timer-logo.png",
    "32": "yt-timer-logo.png",
    "48": "yt-timer-logo.png",
    "128": "yt-timer-logo.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
